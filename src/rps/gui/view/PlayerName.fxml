<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rps.gui.controller.PlayerNameController">
   <HBox alignment="CENTER">
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin>
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
      <Label text="Rock Paper Scissors" textAlignment="CENTER">
         <font>
            <Font name="Cambria Italic" size="31.0" />
         </font>
      </Label>
   </HBox>
   <HBox alignment="CENTER" spacing="10.0">
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
      <TextField fx:id="nameField" promptText="Player name" />
      <Button fx:id="submitBtn" mnemonicParsing="false" onAction="#handleSubmit" text="Submit" />
   </HBox>
</VBox>
